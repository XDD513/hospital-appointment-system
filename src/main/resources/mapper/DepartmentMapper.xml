<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.mapper.DepartmentMapper">

    <!-- ResultMap 定义 -->
    <resultMap id="DepartmentResultMap" type="com.hospital.entity.Department">
        <id property="id" column="id"/>
        <result property="categoryName" column="category_name"/>
        <result property="categoryDesc" column="category_desc"/>
        <result property="deptHead" column="dept_head"/>
        <result property="contactPhone" column="contact_phone"/>
        <result property="location" column="location"/>
        <result property="icon" column="icon"/>
        <result property="status" column="status"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="createTime" column="created_at"/>
        <result property="updateTime" column="updated_at"/>
    </resultMap>

    <!-- 查询启用状态的科室列表 -->
    <select id="selectEnabledList" resultMap="DepartmentResultMap">
        SELECT
            id,
            category_name,
            CAST(category_desc AS CHAR) as category_desc,
            dept_head,
            contact_phone,
            location,
            icon,
            status,
            sort_order,
            created_at,
            updated_at
        FROM tcm_category
        WHERE status = 1
        ORDER BY sort_order ASC
    </select>

    <!-- 查询启用状态的科室列表（按ID查询） -->
    <select id="selectEnabledListByCategoryId" resultMap="DepartmentResultMap">
        SELECT
            id,
            category_name,
            CAST(category_desc AS CHAR) as category_desc,
            dept_head,
            contact_phone,
            location,
            icon,
            status,
            sort_order,
            created_at,
            updated_at
        FROM tcm_category
        WHERE status = 1 AND id = #{categoryId}
        ORDER BY sort_order ASC
    </select>

    <!-- 查询所有科室列表 -->
    <select id="selectAllWithCategory" resultMap="DepartmentResultMap">
        SELECT
            id,
            category_name,
            CAST(category_desc AS CHAR) as category_desc,
            dept_head,
            contact_phone,
            location,
            icon,
            status,
            sort_order,
            created_at,
            updated_at
        FROM tcm_category
        ORDER BY sort_order ASC
    </select>

</mapper>

